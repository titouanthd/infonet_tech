{% extends 'layouts/admin.html.twig' %}

{% block body %}
  <h1>Character index</h1>

  <div class="overflow-scroll">
    <div class="table table-hover">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Mass</th>
            <th>Height</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for character in characters %}
            <tr>
              <td>{{ character.id }}</td>
              <td>{{ character.name }}</td>
              <td>{{ character.mass }}</td>
              <td>{{ character.height }}</td>
              <td>
                <a href="{{ path('app_admin_character_show', {'id': character.id}) }}">show</a>
                <a href="{{ path('app_admin_character_edit', {'id': character.id}) }}">edit</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}