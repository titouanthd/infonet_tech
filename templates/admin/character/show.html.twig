{% extends 'layouts/admin.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col">
			<h1>{{page_title}}</h1>
			{% include "parts/_alerts.html.twig" %}

			<div class="overflow-auto">
				<table class="table table-striped table-bordered table-hover table-sm">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ character.id }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ character.name }}</td>
						</tr>
						<tr>
							<th>Mass</th>
							<td>{{ character.mass }}</td>
						</tr>
						<tr>
							<th>Height</th>
							<td>{{ character.height }}</td>
						</tr>
						<tr>
							<th>Gender</th>
							<td>{{ character.gender }}</td>
						</tr>
						<tr>
							<th>Picture</th>
							<td>{{ character.picture }}</td>
						</tr>
					</tbody>
				</table>
			</div>

			<a href="{{ path('app_admin_character_edit', {'id': character.id}) }}" class="btn btn-sm btn-primary">edit</a>

			<a href="{{ path('app_admin_character_index') }}" class="btn btn-sm btn-secondary my-2">back to list</a>

			{{ include('admin/character/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
