{% extends "layouts/admin.html.twig" %}

{% block body %}
<div class="row">
    <div class="col">
        <h1>{{page_title}}</h1>
        {% include "parts/_alerts.html.twig" %}

        <table class="table table-striped table-bordered table-hover table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for movie in movies %}
                <tr>
                    <td>{{ movie.id }}</td>
                    <td>{{ movie.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_movie_show', {'id': movie.id}) }}" class="btn btn-sm btn-secondary">show</a>
                        <a href="{{ path('app_admin_movie_edit', {'id': movie.id}) }}" class="btn btn-sm btn-primary">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_movie_new') }}">Create new</a>
    </div>
</div>
{% endblock %}
