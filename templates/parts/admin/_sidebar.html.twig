{% set current_route = app.request.get('_route') %}
<div>
	<div class="row">
		<div class="col-auto pe-0">
			<div class="d-flex flex-column">
				<a href="{{ path('app_front_home') }}" class="btn btn-sm btn-light mb-1 {% if 'app_front_home' in current_route %}active{% endif %}">
					<i class="bi bi-house"></i>
				</a>
				<a href="{{ path('app_admin_dashboard') }}" class="btn btn-sm btn-light mb-1 {% if 'app_admin_dashboard' in current_route %}active{% endif %}">
					<i class="bi bi-speedometer2"></i>
				</a>
				<a href="{{ path('app_admin_character_index') }}" class="btn btn-sm btn-light mb-1 {% if 'app_admin_character_index' in current_route %}active{% endif %}">
					<i class="bi bi-people"></i>
				</a>
			</div>
		</div>
		<div class="col ps-1 px-0 collapse collapse-horizontal show" id="sidebarLabels">
			<div class="d-flex flex-column align-items-start">
				<a href="{{ path('app_front_home') }}" class="btn btn-sm btn-light btn-sm btn-light mb-1 {% if 'app_front_home' in current_route %}active{% endif %}">
					<span>Back to front</span>
				</a>
			</div>
			<div class="d-flex flex-column align-items-start">
				<a href="{{ path('app_admin_dashboard') }}" class="btn btn-sm btn-light btn-sm btn-light mb-1 {% if 'app_admin_dashboard' in current_route %}active{% endif %}">
					<span>Dashboard</span>
				</a>
			</div>
			<div class="d-flex flex-column align-items-start">
				<a href="{{ path('app_admin_character_index') }}" class="btn btn-sm btn-light btn-sm btn-light mb-1 {% if 'app_admin_character_index' in current_route %}active{% endif %}">
					<span>Characters</span>
				</a>
			</div>

		</div>
	</div>
</div>
