{% set app_name = 'Infonet.tech' %}

<header style="height:51px;">
	<nav class="navbar navbar-expand-lg fixed-top border-bottom border-white bg-white">
		<div class="container-fluid">

			<div class="col-auto">
				<a href="{{ path('app_front_home')}}" class="navbar-brand fw-bold text-decoration-none">{{ app_name }}</a>
			</div>


			<div class="col d-flex position-relative justify-content-end">
        {# link to characters #}
        <a href="{{ path('app_front_home')}}" class="btn btn-sm me-3">
          <i class="bi bi-people me-1"></i>
          Characters
        </a>
        {# link to movies #}
        <a href="{{ path('app_front_movie')}}" class="btn btn-sm me-3">
          <i class="bi bi-film me-1"></i>
          Movies
        </a>
				{% if app.user %}
					<form class="d-flex align-items-center me-3" action="{{ path('app_front_search')}}" method="get">
						<input class="form-control form-control-sm" type="search" name="q" placeholder="Search" aria-label="Search">
					</form>
					<a href="#" class="btn btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
						{{ app.user.email }}
					</a>
					<ul class="dropdown-menu dropdown-menu-end mt-1">
						<li>
							<a href="{{ path('app_admin_dashboard')}}" class="dropdown-item" type="button">
								<i class="bi bi-gear text-danger me-1"></i>
								Admin dashboard
							</a>
							<a href="{{ path('app_logout')}}" class="dropdown-item" type="button">
								<i class="bi bi-power me-1"></i>
								Logout
							</a>
						</li>
					</ul>
				{% else %}
					<form class="d-flex align-items-center me-3" action="{{ path('app_front_search')}}" method="get">
						<input class="form-control form-control-sm" type="search" name="q" placeholder="Search" aria-label="Search">
					</form>
					<a href="{{ path('app_login')}}" class="btn btn-sm">
						<i class="bi bi-power me-1"></i>
						Login
					</a>
				{% endif %}
			</div>

		</div>
	</nav>
</header>
