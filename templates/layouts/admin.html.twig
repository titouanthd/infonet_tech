<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{{ page_title }}
				| Infonet.tech
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="vh-100 w-100 overflow-hidden">
		{% block header %}
			{% include "parts/admin/_header.html.twig" %}
		{% endblock %}
		<div class="container-fluid">
			<div class="row">
				<div class="col-auto py-3">
					{% block sidebar %}
						{% include "parts/admin/_sidebar.html.twig" %}
					{% endblock %}
				</div>
				<div style="height:calc(100vh - 57px)" class="col overflow-auto">
					<div class="p-3 bg-white shadow-sm">
						{% include "parts/_alerts.html.twig" %}
						{% block body %}
							<p class="mb-0">Default content</p>
						{% endblock %}
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
